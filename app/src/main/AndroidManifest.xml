<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="art.coded.wireframe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.wireframe">
        <activity
            android:name="art.coded.wireframe.ui.DetailActivity"
            android:exported="false"
            android:label="@string/title_activity_detail"
            android:parentActivityName="art.coded.wireframe.ui.TabActivity"
            android:theme="@style/Theme.wireframe.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="art.coded.wireframe.ui.TabActivity" />
        </activity>
        <activity
            android:name="art.coded.wireframe.ui.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:parentActivityName="art.coded.wireframe.ui.MainActivity"
            android:theme="@style/Theme.wireframe.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="art.coded.wireframe.ui.MainActivity" />
        </activity>
        <activity
            android:name="art.coded.wireframe.ui.TabActivity"
            android:exported="false"
            android:label="@string/title_activity_tab"
            android:parentActivityName="art.coded.wireframe.ui.MainActivity"
            android:theme="@style/Theme.wireframe.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="art.coded.wireframe.ui.MainActivity" />
        </activity>
        <activity
            android:name="art.coded.wireframe.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.wireframe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>